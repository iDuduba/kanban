<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    tools:context="wang.laic.kanban.ScanPartActivity">


    <com.journeyapps.barcodescanner.DecoratedBarcodeView
        android:id="@+id/barcode_scanner"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/gridLayout"
        android:layout_alignParentTop="true"/>
        <!--app:zxing_scanner_layout="@layout/custom_barcode_scanner"-->
        <!--app:zxing_preview_scaling_strategy="fitXY"-->
        <!--app:zxing_use_texture_view="true"/>-->

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:layout_above="@+id/inputZone"
        android:background="@drawable/rectangle_border"
        android:columnCount="2"
        android:rowCount="4">

        <TextView
            android:layout_columnWeight="1"
            android:gravity="right"
            android:text="型号" />

        <TextView
            android:id="@+id/tv_part_model"
            android:layout_columnWeight="5" />

        <TextView
            android:layout_columnWeight="1"
            android:gravity="right"
            android:text="客户零件号" />

        <TextView
            android:id="@+id/tv_part_no"
            android:layout_columnWeight="5" />

        <TextView
            android:layout_columnWeight="1"
            android:gravity="right"
            android:text="小类" />

        <TextView
            android:id="@+id/tv_part_category"
            android:layout_columnWeight="5" />

        <TextView
            android:layout_columnWeight="1"
            android:gravity="right"
            android:text="库存量" />

        <TextView
            android:id="@+id/tv_part_stock"
            android:layout_columnWeight="5" />
    </GridLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/buttonsLayout"
        android:id="@+id/inputZone">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="出库类型：" />

        <Spinner
            android:id="@+id/spinner_out_type"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:spinnerMode="dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:prompt="@string/prompt_select_stock_type"
            android:layout_weight="2"
            android:entries="@array/stock_out_type" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="出库数量：" />

        <EditText
            android:id="@+id/et_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:inputType="number"
            android:text="0" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/buttonsLayout">

        <Button
            android:id="@+id/btn_resume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="添加并继续扫描" />

        <Button
            android:id="@+id/btn_commit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确认提交" />
    </LinearLayout>

</RelativeLayout>
